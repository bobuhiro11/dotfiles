{
  "env": {},
  "language": "english",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(go:*)",
      "Bash(test:*)",
      "Bash(sort:*)",
      "Bash(python:*)",
      "Bash(uv:*)",
      "Bash(true)",
      "Bash(false)",
      "Bash(sed:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(make:*)",
      "Bash(gofumpt:*)",
      "Bash(golangci-lint:*)",
      "Bash(mkdir:*)",
      "Bash(mockgen:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(basename:*)",
      "Bash(tee:*)",
      "Bash(xargs:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(comm:*)",
      "Bash(tail:*)",
      "Bash(sleep:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git fetch:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git merge-base:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run watch:*)",
      "Bash(gh search prs:*)",
      "Write(*)",
      "Read(~/.bashrc)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git init:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git clone:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e \"beep 2\" -e \"display dialog \\\"ðŸ”” Claude Code Notification\\n\\nAction required.\\n\\nDirectory: $(basename $(pwd))\\\" with title \\\"Claude Code - Waiting\\\" with icon caution buttons {\\\"OK\\\"} default button \\\"OK\\\"\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e \"beep 3\" -e \"display dialog \\\"âœ… Claude Code Task Complete\\n\\nProcessing finished successfully.\\n\\nDirectory: $(basename $(pwd))\\\" with title \\\"Claude Code - Done\\\" with icon note buttons {\\\"OK\\\"} default button \\\"OK\\\"\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "ccusage statusline"
  }
}
